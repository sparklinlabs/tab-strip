* {
  box-sizing: border-box;
  -ms-user-select: none;
  -moz-user-select: none;
  -webkit-user-select: none;
  user-select: none;
}

html, body {
  height: 100%;
  margin: 0;
}

body {
  font-family: sans-serif;
  font-size: 14px;
  display: flex;
  flex-flow: column;
  background-color: #eee;
}

a { color: #00f; }
a:hover { text-decoration: none; }

header {
  padding: 1em;
  display: flex;
  align-items: center;
  h1, p { margin: 0; }
  p { margin-left: 1em; }
}

.tabs-container {
  margin: 0 1em;
}

.panes {
  background-color: #fff;
  border: 1px solid #bbb;
  flex: 1;
  margin: 0 1em;
  padding: 1em;
  overflow-y: auto;

  > :not(.active) { display: none; }
  
  h1 {
    margin: 0;
    margin-bottom: 0.5em;
  }
}

ol.tab-strip {
  height: 30px;
  display: flex;
  margin: 0;
  padding: 0;

  cursor: default;
  margin-right: 1px;

  > li {
    flex: 0 1 160px;
    display: flex;
    align-items: center;
    width: 160px;
    height: 30px;
    border: 1px solid #bbb;
    border-bottom: none;
    background: #ddd;
    padding: 0 0.5em;
    overflow: hidden;
    margin-right: -1px;

    &.dragged {
      flex: 0 0 0;
      position: absolute;
      z-index: 1000;
    }

    &.drop-placeholder {
      background: none;
      border: 1px solid rgba(0,0,0,0);
      border-bottom: none;
    }

    &:not(.active) { color: #888; }
    &:hover { background: #eee; }
    &.active { background: #fff; }
  }

  > li .label {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

    /* IMPORTANT: Let mouse events pass through to the tab button */
    pointer-events: none;
  }
}
  